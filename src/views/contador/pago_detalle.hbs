
<!-- Header -->
			<header id="header">
				<h1><a href="#" style="display: flex; justify-content: center; align-items: center;"><img src="/images/logo_m.svg" style="min-height:4vh; height: 5vh;" alt="" srcset=""></a></h1>
				<a href="/comercios/folio/inspector/ASD234">Inspectores</a>
			</header>

		<!-- Banner -->
            
            
			<section id="banner">
				<div class="inner" style="overflow-y:scroll; overflow-x:hidden; background-image: url('/images/Individual.png'); background-position:center; background-size:60%; background-repeat: no-repeat;">
					<br><br>
					<h2 class="major special">Historial de Pagos</h2>
					<h4>Historial de Pago del Folio <strong>{{folio_.Folio}}</strong></h4>
					
		<!-- Formulario -->
			
                    {{> message}}
					<ul class="actions special stacked">
						
						<table id="" class="table table-striped table-bordered table-sm" cellspacing="0" width="100%">
  							<thead>
    							<tr>
      								<th class="th-sm">Mes</th>
      								<th class="th-sm">Estatus</th>
									<th>Pagar</th>
    							</tr>
  							</thead>
  							<tbody>
						{{#each comercios}}
    							<tr>
      								<td>{{Mes}}</td>
									<td>{{Pago}}</td>
									{{#if valor}}
      								<td><a style="width: 10px; height: 10px; display:flex; justify-content:center; align-items:center;" href="/contador/realizar_pago/{{Id}}" class="btn btn-primary btn-lg">Pagar</a></td>
									{{else}}
									<td><a style="width: 10px; height: 10px; display:flex; justify-content:center; align-items:center;" href="/contador/correccion_pago/{{Id}}" class="btn btn-danger btn-lg"> Cambiar</a></td>
									{{/if}}
    							</tr>
    					{{/each}}
						</tbody>
						</table>
						<li><a href="/contador/pago/" style="background-color: red;" class="button primary">Regresar</a></li>
					</ul>
                    
				
				</div>
			</section>

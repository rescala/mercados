
		<!-- Banner -->
			<section id="banner">
				<div class="inner" style="background-image: url('/../../images/Individual.png'); background-position:center; background-size:60%; background-repeat: no-repeat;">
					<h2 class="major special">Dirección de Mercados y Plazas</h2>
					<h4>Ingresa con tus credenciales preasignadas</h4>
                    <form action="/login" id="myform" method="post">
